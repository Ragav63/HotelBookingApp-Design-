<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with corner radius and green border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="1dp"
            android:color="@color/gold" />  <!-- Set the color of the border -->
            <corners android:radius="4dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Arrow drawable -->
    <item
        android:drawable="@drawable/ic_arrow_drop_down"
        android:gravity="end|center_vertical" />
</layer-list>
